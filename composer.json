{
    "name": "aymanalhattami/unit-conversion",
    "description": "PHP package for unit conversion",
    "keywords": [
        "aymanalhattami",
        "unit-conversion"
    ],
    "homepage": "https://github.com/aymanalhattami/unit-conversion",
    "license": "MIT",
    "authors": [
        {
            "name": "Ayman Alhattami",
            "email": "ayman.m.alhattami@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Aymanalhattami\\UnitConversion\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aymanalhattami\\UnitConversion\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": false
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
